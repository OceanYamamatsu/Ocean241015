n,a,b=map(int,input().split())
s=input()
ans=99999999999999999999999
an=-1
bn=0
nt=n
if n%2!=0:
        nt-=1
# s=s[-1]+s[0:n-1]
for u in range(n):
    bn=0
    for i in range(nt//2):
        if s[i]!=s[n-1-i]:
            bn+=1
    if ans>=a*an+b*bn:
         ans=a*an+b*bn
    s=s[1::]+s[0]
    an+=1
    print(s,a*an,b*bn)
    




    # print(s)

                               

print(ans)
